# ===========================================
# Agent Workflow Server - Environment Config
# ===========================================

# OpenRouter API Key (required for LLM calls)
OPENROUTER_API_KEY=sk-or-v1-xxxxx

# OpenRouter Model (optional, defaults to anthropic/claude-sonnet-4)
# Examples: anthropic/claude-sonnet-4, openai/gpt-4o, google/gemini-pro
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# App URL for OpenRouter referrer header (optional)
APP_URL=http://localhost:3000

# GitHub Configuration
GITHUB_TOKEN=ghp_xxxxx
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Server Configuration
PORT=3000
NODE_ENV=development

# Database (optional, for job persistence)
DATABASE_URL=postgresql://user:pass@localhost:5432/agent_workflow

# Logging
LOG_LEVEL=info
